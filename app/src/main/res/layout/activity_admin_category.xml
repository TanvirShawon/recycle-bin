<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightWhite"
    tools:context=".Admin.AdminCategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/background_back" />
            />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            android:textAllCaps="true"
            android:padding="10dp"/>




        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:id="@+id/organic"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organic"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:padding="25dp"/>




            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/organic1"

                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/plastic_bottle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/plasticbottle1"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plastic Materials"
                    android:textSize="27sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:padding="25dp"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/broken_plastic"
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borken Plastic"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:padding="25dp"/>




            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/brokenplastic1"

                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/restaurant"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/restaurant1"
                    android:layout_marginLeft="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant Waste"
                    android:textSize="26sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:padding="25dp"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>






        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:id="@+id/newspaper"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Old NewsPaper"
                    android:textSize="27sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:padding="25dp"/>




            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@drawable/newspaper1"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/electronics"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/electronics1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronics"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:padding="25dp"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/clothes"
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clothes"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:padding="25dp"/>




            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/clothes1"
                android:layout_marginTop="-20dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/furniture"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/furniture1"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Furniture"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:padding="25dp"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/vehicles"
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicles"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:padding="25dp"/>




            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/vehicles1"
                android:layout_marginTop="-20dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/sports"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/sport1"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:padding="25dp"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/fashion_beauty"
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fashion Beauty"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:padding="25dp"/>




            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/fashion1"
                android:layout_marginTop="-20dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#00000000"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/plant_nursery"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/plant1"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plant Nursery"
                    android:textSize="28sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="@color/black"
                    android:layout_alignParentRight="true"
                    android:padding="25dp"/>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>














    </LinearLayout>




</ScrollView>