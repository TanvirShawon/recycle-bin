<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightWhite"
    tools:context=".Buyer.CategoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/back_pressed_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                android:src="@drawable/background_back" />
            />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"
            android:text="Categories"
            android:textAllCaps="true"
            android:textSize="30sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:id="@+id/organic_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/categories_car_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Organic"
                    android:textColor="@color/black"
                    android:textSize="28sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/organic1" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/plastic_bottle_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/plasticbottle1" />

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Plastic Materials"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:id="@+id/broken_plastic_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/categories_car_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Borken Plastic"
                    android:textColor="@color/black"
                    android:textSize="28sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"

                android:src="@drawable/brokenplastic1" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/restaurant_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/restaurant1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Restaurant Waste"
                    android:textColor="@color/black"
                    android:textSize="26sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:id="@+id/newspaper_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/categories_car_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Old NewsPaper"
                    android:textColor="@color/black"
                    android:textSize="27sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/newspaper1" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/electronics_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/electronics1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Electronics"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:id="@+id/clothes_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/categories_car_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Clothes"
                    android:textColor="@color/black"
                    android:textSize="28sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-20dp"
                android:src="@drawable/clothes1" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/furniture_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/furniture1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Furniture"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:id="@+id/vehicles_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/categories_car_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Vehicles"
                    android:textColor="@color/black"
                    android:textSize="28sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-20dp"
                android:src="@drawable/vehicles1" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/sports_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/sport1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Sports"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="150dp">

            <RelativeLayout
                android:id="@+id/fashion_beauty_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:background="@drawable/categories_car_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Fashion Beauty"
                    android:textColor="@color/black"
                    android:textSize="28sp" />


            </RelativeLayout>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-20dp"
                android:src="@drawable/fashion1" />

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_marginRight="20dp"
            app:cardBackgroundColor="#00000000"
            app:cardElevation="8dp">
            >

            <RelativeLayout
                android:id="@+id/plant_nursery_cat"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/categories_car_background">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/plant1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="sans-serif-black"
                    android:padding="25dp"
                    android:text="Plant Nursery"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>