<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyer.ProductDetailsActivity">

    <LinearLayout
        android:id="@+id/llout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card2"
            android:layout_width="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/product_image_details"
                android:layout_width="350dp"
                android:layout_height="260dp"
                android:scaleType="centerCrop"
                ></ImageView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <TextView
        android:id="@+id/product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llout6"
        android:text="Product Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></TextView>

    <LinearLayout
        android:id="@+id/llout2"
        android:layout_below="@id/product_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted At:  "
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="20dp"

            ></TextView>

        <TextView
            android:layout_marginRight="5dp"
            android:id="@+id/product_date_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted Date"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"

            ></TextView>

        <TextView
            android:id="@+id/product_time_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted Time"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"

            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llout2"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: "
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="20dp"
            android:gravity="center"

            ></TextView>

        <TextView
            android:id="@+id/product_location_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Location"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"

            ></TextView>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=", "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"

            ></TextView>


        <TextView
            android:id="@+id/product_district_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="District"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"

            ></TextView>

    </LinearLayout>



    <LinearLayout
        android:id="@+id/llout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/llout4"
        android:orientation="horizontal"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Details: "
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="20dp"
            android:gravity="center"

            ></TextView>

        <TextView
            android:id="@+id/product_description_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"

            ></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llout1"
        android:gravity="center"
        android:layout_below="@+id/llout5"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"


        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="20dp"
            android:text="Price: Tk "
            android:gravity="center"
            >

        </TextView>
        <TextView
            android:id="@+id/product_price_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
          android:gravity="center"
            ></TextView>

    </LinearLayout>


    <TextView
        android:id="@+id/product_se_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llout1"
        android:text="Seller Details: "
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></TextView>

    <TextView
        android:id="@+id/product_seller_name_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_se_details"
        android:text="Seller Name"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></TextView>

    <TextView
        android:id="@+id/product_seller_phone_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_seller_name_details"
        android:text="Seller Phone Number"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></TextView>

    <TextView
        android:id="@+id/product_seller_email_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_seller_phone_details"
        android:text="Seller Email"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        ></TextView>



